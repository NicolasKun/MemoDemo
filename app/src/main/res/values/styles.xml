<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogActivityStyle" parent="@style/Theme.AppCompat.Light.Dialog" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside" >false</item>
    </style>

    <style name="main_textview_genral">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_main_tv</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="popupWindow" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/popup_start</item>
        <item name="android:windowExitAnimation">@anim/popup_end</item>
    </style>

    <style name="dialogTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation" >@anim/anim_dialog_close_enter</item>
        <item name="android:activityCloseExitAnimation" >@anim/anim_dialog_close_exit</item>
        <item name="android:activityOpenEnterAnimation" >@anim/anim_dialog_open_enter</item>
        <item name="android:activityOpenExitAnimation" >@anim/anim_dialog_open_exit</item>
    </style>

    <style name="dialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/dialogTheme</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

</resources>

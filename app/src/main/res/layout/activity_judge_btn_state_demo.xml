<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.leeq.util.memodemo.ui.JudgeBtnStateDemo">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/jbs_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@drawable/shape_jbs_tv_true"
            android:textColor="@color/jbs_tv_text_color"
            android:text="夏尔"/>
        <TextView
            android:id="@+id/jbs_tv_2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_jbs_tv_true"
            android:textColor="@color/jbs_tv_text_color"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="阿苏拉"/>
        <TextView
            android:id="@+id/jbs_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_jbs_tv_true"
            android:textColor="@color/jbs_tv_text_color"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="诺恩"/>
    </LinearLayout>

    <RadioButton
        android:onClick="startJudge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:button="@null"
        android:padding="3dp"
        android:layout_margin="15dp"
        android:textSize="19sp"
        android:textColor="@color/colorPrimary"
        android:text="确定"/>
</RelativeLayout>
